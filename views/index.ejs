                    <img src="image/<%=user.personalInfo.profile_pic%>" alt="">
                    <h4>This is your profile picture</h4>
                 </div>
                
                <hr>
                <% if (files){ %>
                    <% files.forEach((file) => { %>
                        <div class="card card-body mb3">
                            <% if (file.isImage) { %>
                                <img src="image/<%=file.filename%>" alt="" style="width: 100%; height: 600px;">
                            <% } else { %>
                                file.filename
                            <% } %>
                            <h4>Username: <%=user.usernam%></h4>
                            <p>desc: <%=user.personalInfo.h_Education%></p>
                            <form action="/files/<%= file._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-block mt-4">Delete</button>
                            </form>
